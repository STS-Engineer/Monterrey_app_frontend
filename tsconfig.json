{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",  // Changed back from "node16"
    "module": "esnext",          // Changed back from "node16"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "src/**/*.jsx"],
  "exclude": ["node_modules"]
}
