{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node16",  // Changed from "node"
    "module": "node16", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,          // Added to handle some library type issues
    "types": ["node"]             // Added for Node.js types
  },
  "include": ["src/**/*", "src/**/*.jsx"],
  "exclude": ["node_modules"]
}
